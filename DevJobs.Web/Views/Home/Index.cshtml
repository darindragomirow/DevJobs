@using DevJobs.Web.Models
@model MainViewModel

@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">
    <h1 class="text-center">DevJobs</h1>
    <p class="text-center lead">DevJobs.bg is a free website for searching developer jobs in Bulgaria.</p>
    <div class="searchForm" style="margin-left:100px;">
        @using (@Html.BeginForm("GetFiltered", "Ads", FormMethod.Post))
        {
        <ul>
            <li style="background:#2f315d;padding:7px;color:white;display:inline-block;">
                <div class="lab">Key words</div>
                <input name="searchTerm" type="text" class="keyWords" data-dpmaxz-eid="2">
            </li>
            <li style="background: #2f315d;padding:7px;color:white;display:inline-block;">
                <div class="lab">Location</div>
                @*<select name="distance" id="distance" style="padding:12px;width:200px;" data-dpmaxz-eid="3">
                    <option value="0">Sofiq</option>
                    <option value="1">Plovdiv</option>
                    <option value="2">Varna</option>
                    <option value="3">Burgas</option>
                </select>*@
                @Html.DropDownList("ChoiceList")
            </li>
            <li style="background: #2f315d;padding:7px;color:white;display:inline-block;">
                <div class="lab">Technology</div>
                <select name="distance" id="distance" style="padding:12px;width:200px;" data-dpmaxz-eid="3">
                    <option value="0">ASP.NET</option>
                    <option value="1">Java EE</option>
                    <option value="2">Front-end</option>
                    <option value="3">MSSQL</option>
                </select>
            </li>
       </ul>
        <div class="text-center">
            <input type="submit" class="searchButton" value="SEARCH" data-dpmaxz-eid="96">
        </div>
        }
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-8 lastAds">
        <div class="title">
            <h4>Latest added adverts:</h4>
        </div>
        @foreach (var ad in Model.Ads)
        {
            <a style="color:black" href='@Url.Action("GetDetails","Ads", new { ad.Id },null)'>
                <div class="ad">
                    <span class="pull-right">@ad.CreatedOn</span>
                    <h3>@ad.Title</h3>
                    <h6>@ad.City Sofiq</h6>
                </div>
            </a>
        }
    </div>
    <div class="col-md-4 topCompanies">
